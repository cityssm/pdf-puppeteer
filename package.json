{
  "name": "@cityssm/pdf-puppeteer",
  "version": "4.3.1",
  "description": "A simple NPM package to convert html to pdf for Node applications by using Puppeteer",
  "type": "module",
  "exports": "./index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "cross-env DEBUG=pdf-puppeteer:*,puppeteer-launch:* node --test",
    "coverage": "cross-env DEBUG=pdf-puppeteer:*,puppeteer-launch:* c8 --reporter=lcov --reporter=text --reporter=text-summary node --test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cityssm/pdf-puppeteer.git"
  },
  "keywords": [
    "pdf",
    "puppeteer",
    "html",
    "html-to-pdf",
    "pdf-from-html",
    "chrome",
    "firefox",
    "pdf-generator",
    "pdf-creator",
    "pdf-puppeteer",
    "puppeteer-pdf"
  ],
